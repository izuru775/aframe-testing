<!-- Materialize icons-->
<link
  href="https://fonts.googleapis.com/icon?family=Material+Icons"
  rel="stylesheet"
/>

<link href="/styles.css" rel="stylesheet" type="text/css" />

<a-scene>
  <a-assets>
    <img
      id="my-image"
      src="http://localhost:3001/images/L09-img-curved.jpg"
    />
  </a-assets>

  <!-- Image Primitive | IMG size 1024x768px -->
  <!-- IMG width (px) = 1 m -->
  <!-- ? IMG height (m) = width (m)/IMG width (px) * IMG height (px) -->

  <a-image
    src="#my-image"
    position="0 1.5 -10"
    height="0.75"
    width="1"
    scale="12 9 1"
  ></a-image>

  <a-box
    color="tomato"
    depth="1"
    height="1"
    width="1"
    position="-2 0.5 -8"
  ></a-box>
  <a-entity
    geometry="primitive:box"
    material="shader:standard;color:green"
    position="2 0.5 -8"
  ></a-entity>
  <a-entity
    geometry="primitive:cylinder;theta-length:90;theta-start:135;radius:0.707;height:0.833;open-ended:true"
    material="shader:flat;color:#FFF;side:double;src:#my-image"
    position="0 1.5 0"
    scale="-10 10 10"
  ></a-entity>
</a-scene>

